<div class="container">
  <%# <%= render partial: "partials/form_errors", locals: { model: @user } %>

  <h2 class="title">Input</h2>
  <p class="mt">Enter your email address and password to login</p>
  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: { turbo: false } do |form| %>
      <p><%= form.label :email %></p>
      <p><%= form.text_field :email, class: 'form__text__field' %></p>
      <p class="mt"><%= form.label :password  %></p>
      <p><%= form.password_field :password, class: 'form__text__field'  %></p>
      <p class="mt__lg"><%= form.submit 'Log  in', class: 'button button__main' %></p>
    <% end %>
  </div>
</div>
