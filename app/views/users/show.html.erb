<div class="user__box">

<div class="mt">
  <%= render partial: 'users/user_avatar', locals: { user: @user } %>
</div>

  <% if current_user == @user %>
    <p class="mt mb__lg">
      <%= link_to fa_icon('pencil'), edit_user_path(@user) %>
    </p>
  <% end %>


  <p class="text__bold mt mb__lg">@<%= @user.nickname %></p>
   <p class="text-sm mb">Чтобы добавить или поменять аватар — зарегистрируйтесь на <%= link_to "Gravatar", 'https://gravatar.com' %> и загрузите фото</p>
  </div>

<div class="container">
  <%= link_to "Ask me", new_question_path(user_id: @user.id),
    class: "button button__yellow" %>

  <p class="mt">
    <%= render 'questions/form', question: @question %>
  </p>
</div>


<div class="container mt__sm">
  <h2 class="title__lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'question', 'questions') %>
  </h2>
</div>

<div class="mt__sm container">
<% if @questions.count == 0 && current_user.present?  %>
  <%= render "user_asks" %>
<% else %>
  <% @questions.each do |question| %>
    <%= render question %>
  <% end %>
<% end %>
</div>
