<div class="container">
  <h2 class="title__lg mb__sm text__grey empty__state">All users</h2>
  <h2 class="title__sm mb__lg empty__state"><%= t('.who_do_you_want_to_ask_a_question?') %></h2>
  <div class="user__all" >
    <% @users.each do |user| %>
    <a href="<%= user_path(user) %>">
      <p  class="text__bold" ><%= image_tag user.gravatar_url, title: "@#{user.nickname}", class: 'rounded' %></p>
    </a>
    <% end %>
  </div>
</div>
